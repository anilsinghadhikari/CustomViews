<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="customview.android.com.customview.ScrollViewWorkActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/btnParnetLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btnTopLayoutHeight"
            android:orientation="vertical">
            <Button android:background="@android:color/holo_blue_dark"
                android:layout_marginBottom="5dp"
                android:id="@+id/fbBtn"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:text="Facebook"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button android:background="@android:color/holo_orange_dark"
                android:layout_marginBottom="15dp"
                android:id="@+id/gPlusBtn"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"
                android:text="Gmail"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ScrollView android:id="@+id/scrollViewSignUp"
            android:layout_marginTop="@dimen/btnTopLayoutHeight"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--   <LinearLayout android:id="@+id/btnParnetLayout"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/btnTopLayoutHeight"
                   android:orientation="vertical">
                   <Button android:background="@android:color/holo_blue_dark"
                       android:layout_marginBottom="5dp"
                       android:id="@+id/fbBtn"
                       android:textAllCaps="false"
                       android:layout_marginTop="10dp"
                       android:text="Facebook"
                       android:textColor="@android:color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

                   <Button android:background="@android:color/holo_orange_dark"
                       android:layout_marginBottom="15dp"
                       android:id="@+id/gPlusBtn"
                       android:textAllCaps="false"
                       android:layout_marginTop="5dp"
                       android:text="Gmail"
                       android:textColor="@android:color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
               </LinearLayout>-->


            <!--   <View android:id="@+id/anchor"
                   android:layout_below="@+id/btnParnetLayout"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/btnTopLayoutHeight"
                   android:minHeight="@dimen/btnTopLayoutHeight" />-->
            <LinearLayout android:id="@+id/bottomParnetLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView android:text="Sign up using email"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView android:text="NAME"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/nameEditText"
                    android:imeOptions="actionNext"
                    android:singleLine="true"                android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView android:text="EMAIL"
                    android:layout_marginTop="@dimen/signUP_item_top_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:singleLine="true"                   android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView android:text="MOBILE"
                    android:layout_marginTop="@dimen/signUP_item_top_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText android:inputType="numberSigned"
                    android:id="@+id/mobileEditText"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView android:text="PASSWORD"
                    android:layout_marginTop="@dimen/signUP_item_top_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText android:maxLines="1"
                    android:id="@+id/passwordEditText"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView android:text="CONFIRM PASSWORD"
                    android:layout_marginTop="@dimen/signUP_item_top_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText android:inputType="textPassword"
                    android:id="@+id/passwordEditText1"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <Button android:background="@android:color/holo_green_dark"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/signUpbtn"
                    android:textAllCaps="false"
                    android:layout_marginTop="35dp"
                    android:text="Sign Up"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</LinearLayout>
